/* define a recursive function */
let
  /* calculate n! */
  function fact (n : int) : int =
    if  n = 0
      then 1
      else n * fact (n - 1)

  function printint(i:int) = 
        let function f(i : int) =
            if i > 0
            then (f (i/10); print(chr(i-i/10*10+ord("0"))))
        in if i < 0 then (print("-"); f(i))
           else if i > 0 then f(i)
           else print("0")
        end
in
  printint(fact(10)) ; 0
end
